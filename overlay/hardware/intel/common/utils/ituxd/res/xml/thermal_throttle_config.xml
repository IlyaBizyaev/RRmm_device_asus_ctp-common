
<?xml version="1.0" encoding="UTF-8"?>
<!--  Thermal Management Configuration File -->
<!--  Intel Corporation 2011-2014  -->
<thermalthrottleconfig>
  <!--Cooling Devices-->
  <ContributingDeviceInfo>
    <CDeviceName>CPU</CDeviceName>
    <CDeviceID>1</CDeviceID>
    <CDeviceClassPath>com.intel.thermal.CPUMaxFreqControl</CDeviceClassPath>
    <!--Throttle values are the set of values that a cooling device takes as input.-->
    <!--The values can be a set of Frequencies for CPU cooling device,-->
    <!--brightness limit (as percentage) for display cooling device etc.-->
    <ThrottleValues>
      <ThrottleNormal>1200000</ThrottleNormal>
      <ThrottleWarning>933000</ThrottleWarning>
      <ThrottleAlert>800000</ThrottleAlert>
      <ThrottleCritical>800000</ThrottleCritical>
    </ThrottleValues>
  </ContributingDeviceInfo>
  <ContributingDeviceInfo>
    <CDeviceName>Battery</CDeviceName>
    <CDeviceID>2</CDeviceID>
    <CDeviceClassPath>com.intel.thermal.BatteryChargeCurrentControl</CDeviceClassPath>
    <CDeviceThrottlePath>auto</CDeviceThrottlePath>
  </ContributingDeviceInfo>
  <ContributingDeviceInfo>
    <CDeviceName>Display</CDeviceName>
    <CDeviceID>3</CDeviceID>
    <CDeviceClassPath>com.intel.thermal.BrightnessControl</CDeviceClassPath>
    <ThrottleValues>
      <ThrottleNormal>100</ThrottleNormal>
      <ThrottleWarning>80</ThrottleWarning>
      <ThrottleAlert>50</ThrottleAlert>
      <ThrottleCritical>40</ThrottleCritical>
    </ThrottleValues>
  </ContributingDeviceInfo>
  <ContributingDeviceInfo>
      <CDeviceName>SoC</CDeviceName>
      <CDeviceID>4</CDeviceID>
      <CDeviceClassPath>com.intel.thermal.SoCControl</CDeviceClassPath>
      <CDeviceThrottlePath>none</CDeviceThrottlePath>
  </ContributingDeviceInfo>
  <ContributingDeviceInfo>
      <CDeviceName>Modem</CDeviceName>
      <CDeviceID>5</CDeviceID>
      <CDeviceClassPath>com.intel.thermal.ModemCooling</CDeviceClassPath>
  </ContributingDeviceInfo>

  <!--Map the cooling devices with specfic zones for throttling-->
  <ZoneThrottleInfo>
    <ZoneID>0</ZoneID>
    <CriticalShutDown>0</CriticalShutDown>
    <!--set CriticalShutDown to 1, if platform needs to shutdown
        if this zone reaches critical thermal state to avoid any user impact-->
    <!--list of cooling device IDs registered for the zone-->
    <CoolingDeviceInfo>
      <CoolingDevId>1</CoolingDevId>
      <ThrottleDeviceMask>
          <Normal>0</Normal>
          <Warning>1</Warning>
          <Alert>1</Alert>
      </ThrottleDeviceMask>
      <!--four states: Normal,Warning,Alert,Critical. 0 - disable throttling,1 - enable throttling, -1 - dont care-->
      <DethrottleDeviceMask>
          <Normal>1</Normal>
          <Warning>1</Warning>
          <Alert>1</Alert>
      </DethrottleDeviceMask>
      <!--four states: Normal,Warning,Alert,Critical. 0 - disable de-throttling,1 - enable de-throttling, -1 - dont care-->
    </CoolingDeviceInfo>
  </ZoneThrottleInfo>
  <ZoneThrottleInfo>
    <ZoneID>1</ZoneID>
    <CriticalShutDown>1</CriticalShutDown>
    <CoolingDeviceInfo>
      <CoolingDevId>1</CoolingDevId>
      <ThrottleDeviceMask>
          <Normal>0</Normal>
          <Warning>1</Warning>
          <Alert>1</Alert>
      </ThrottleDeviceMask>
      <DethrottleDeviceMask>
          <Normal>1</Normal>
          <Warning>1</Warning>
          <Alert>1</Alert>
      </DethrottleDeviceMask>
    </CoolingDeviceInfo>
    <CoolingDeviceInfo>
      <CoolingDevId>3</CoolingDevId>
      <ThrottleDeviceMask>
          <Normal>0</Normal>
          <Warning>0</Warning>
          <Alert>1</Alert>
      </ThrottleDeviceMask>
      <DethrottleDeviceMask>
          <Normal>1</Normal>
          <Warning>1</Warning>
          <Alert>1</Alert>
      </DethrottleDeviceMask>
    </CoolingDeviceInfo>
  </ZoneThrottleInfo>
  <ZoneThrottleInfo>
    <ZoneID>2</ZoneID>
    <CriticalShutDown>1</CriticalShutDown>
    <CoolingDeviceInfo>
      <CoolingDevId>1</CoolingDevId>
      <ThrottleDeviceMask>
          <Normal>0</Normal>
          <Warning>1</Warning>
          <Alert>1</Alert>
      </ThrottleDeviceMask>
      <DethrottleDeviceMask>
          <Normal>1</Normal>
          <Warning>1</Warning>
          <Alert>1</Alert>
      </DethrottleDeviceMask>
    </CoolingDeviceInfo>
  </ZoneThrottleInfo>
 </thermalthrottleconfig>
